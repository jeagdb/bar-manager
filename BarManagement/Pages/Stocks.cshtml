@page
@model BarManagement.Pages.StocksModel
@{
    ViewData["Title"] = "Stocks";
}

<div class="text-center">
    <h1 class="display-4 mb-5">GESTION DU STOCK</h1>
</div>
<div class="container mb-3">
    <div class="row">
        <div class="card col-lg">
            <div class="card-body">
                <h1 class="card-title">Nouvelle boisson</h1>
                <form method="post">
                    <div class="form-group">
                        <label>Nom</label>
                        <input class="form-control" asp-for="FormDrink.NAME" />
                    </div>
                    <div class="form-group">
                        <label>Marque</label>
                        <input class="form-control" asp-for="FormDrink.BRAND" />
                    </div>
                    <div class="form-group">
                        <label>Catégorie</label>
                        <select class="form-control" name="categorySelected" asp-items="Model.CategoryOptions"></select>
                    </div>
                    <button asp-page-handler="Drinks" type="submit" class="btn btn-primary">Ajout d'une boisson</button>"
                </form>
            </div>
        </div>

        @if (Model.Drinks != null && Model.Drinks.Count > 0)
        {
    <div class="card col-lg">
        <div class="card-body">
            <h1 class="card-title">Liste des boissons</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Drinks.ElementAt(0).Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Drinks.ElementAt(0).Brand)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Drinks.ElementAt(0).Category)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Drinks)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                <form method="post">
                                    <button asp-page-handler="RemoveDrink" asp-route-id="@item.Id" type="submit" class="btn btn-danger">X</button>
                                </form>
                                @if (!Model.isDelete)
                                {
                                    <p>Attention, suppression impossible : il existe un stock de cette boisson.</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
        }
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="card col-lg">
            <div class="card-body">
                <h1 class="card-title">Nouveau stock</h1>
                <form method="post">
                    <div class="form-group">
                        <select class="form-control" name="drinkSelected" asp-items="Model.DrinksOptions"></select>
                    </div>
                    <div class="form-group">
                        <label>Contenance par unité (cl)</label>
                        <input class="form-control" asp-for="FormStock.CAPACITY" />
                    </div>
                    <div class="form-group">
                        <label>Prix d'une unité</label>
                        <input class="form-control" asp-for="FormStock.PRICE" />
                    </div>
                    <div class="form-group">
                        <label>Nombre d'unités</label>
                        <input class="form-control" asp-for="FormStock.NUMBER" />
                    </div>
                    <button class="btn btn-primary" asp-page-handler="Stocks" type="submit">Créer un nouveau stock</button>
                </form>
            </div>
        </div>
        @if (Model.Stocks != null && Model.Stocks.Count > 0)
        {
            <div class="card col-lg">
                <div class="card-body">
                    <h1 class="card-title">Stock actuel</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Nom
                                </th>
                                <th>
                                    Marque
                                </th>
                                <th>
                                    Quantité (cl)
                                </th>
                                <th>
                                    Prix (€/cl)
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Stocks)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Drink.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Drink.Brand)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        <form method="post">
                                            <div class="form-group">
                                                <label>Contenance par unité (cl)</label>
                                                <input class="form-control" asp-for="FormStock.CAPACITY" />
                                            </div>
                                            <div class="form-group">
                                                <label>Prix d'une unité</label>
                                                <input class="form-control" asp-for="FormStock.PRICE" />
                                            </div>
                                            <div class="form-group">
                                                <label>Nombre d'unités</label>
                                                <input class="form-control" asp-for="FormStock.NUMBER" />
                                            </div>
                                            <button class="btn btn-info" -asp-page-handler="UpdateStock" asp-route-id="@item.Id" type="submit">Modifier</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post">
                                            <button asp-page-handler="RemoveStock" asp-route-id="@item.Id" type="submit" class="btn btn-danger">X</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>